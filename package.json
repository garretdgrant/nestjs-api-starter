{
  "name": "typescript-starter-nestjs",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "license": "UNLICENSED",
  "author": "",
  "packageManager": "pnpm@10.26.0",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "build": "pnpm run prisma:generate && nest build",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:write": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "prettier": "prettier --write .",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "ENVIRONMENT=dev pnpx prisma migrate dev",
    "prisma:studio": "ENVIRONMENT=dev pnpx prisma studio",
    "prisma:migrate:prod": "ENVIRONMENT=prod pnpx prisma migrate deploy",
    "prisma:migrate:reset:dev": "ENVIRONMENT=dev pnpx prisma migrate reset --force",
    "prisma:migrate:reset:prod": "ENVIRONMENT=prod pnpx prisma migrate reset --force",
    "sort:package": "pnpm dlx sort-package-json",
    "start": "pnpm run start:prod",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/src/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "run:ci": "pnpm run format:write && pnpm run lint && pnpm run prisma:generate && pnpm run test:cov"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/swagger": "^11.2.3",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "bcryptjs": "^2.4.3",
    "chokidar": "^5.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "jsonwebtoken": "^9.0.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.9",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "prisma": "^7.1.0",
    "sort-package-json": "^2.12.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
